{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "./lib/index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "./lib/**/*.ts"
    ]
  }
}
